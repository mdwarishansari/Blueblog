# =========================
# Database
# =========================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# =========================
# JWT Auth
# =========================
JWT_ACCESS_SECRET="replace_with_strong_access_secret"
JWT_REFRESH_SECRET="replace_with_strong_refresh_secret"
ACCESS_TOKEN_EXPIRES_IN="1d"
REFRESH_TOKEN_EXPIRES_IN="7d"

# =========================
# Cloudinary
# =========================
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# =========================
# Rate Limiting
# =========================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# =========================
# Admin Bootstrap Account
# =========================
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="StrongPassword123!"
ADMIN_NAME="Administrator"

# =========================
# CORS
# =========================
ALLOWED_ORIGINS="http://localhost:3000"

# =========================
# Site Configuration (Public)
# =========================
NEXT_PUBLIC_SITE_NAME="BlueBlog"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_DESCRIPTION="SEO optimized blogging platform"

# =========================
# SEO Defaults
# =========================
NEXT_PUBLIC_DEFAULT_OG_IMAGE="/og-default.png"
NEXT_PUBLIC_TWITTER_HANDLE="@yourhandle"

# =========================
# Admin Panel
# =========================
NEXT_PUBLIC_ADMIN_PATH="/admin"
